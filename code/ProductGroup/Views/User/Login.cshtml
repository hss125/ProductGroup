
@{
    ViewBag.Title = "Login";
}

<div class="login-bgimg">
    <img src="~/Content/Images/login_bg.png">
</div>
<div class="login-bg">
    <div class="login-bd">
        <h2>登录</h2>
        <div style="padding-right:25px;padding-top: 35px;">
            <form action="/User/Login">
                <div class="layui-form-item">
                    <label class="layui-form-label">用户名</label>
                    <div class="layui-input-block">
                        <input type="text" id="name" name="UserName" lay-verify="title" autocomplete="off" placeholder="请输入用户名" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">密码</label>
                    <div class="layui-input-block">
                        <input type="password" id="pwd" name="PassWord" lay-verify="title" autocomplete="off" placeholder="请输入密码" class="layui-input">
                    </div>
                </div>
                <input type="submit" id="login2" style="display:none"/>
            </form>
            
            <div class="layui-form-item" style="padding-left:25px;padding-top:25px">
                <button class="layui-btn" id="login"  style="width:100%">登录</button>
            </div>
        </div>
        
    </div>
</div>
@{
    if (ViewBag.Error == "1")
    {
        <script>
            alert("用户名或密码错误！");
        </script>
    }
}
<style>
    .login-bgimg { position: fixed; left: 0; right: 0; bottom: 0; top: 0; }
    .login-bgimg img { width: 100%; height: 100%; }
    .login-bd { position: fixed; background: #fff; width: 390px; height: 300px; left: 50%; top: 50%; margin-left: -195px; margin-top: -150px; box-shadow: 0 6px 8px #969696; -moz-box-shadow: 0 6px 8px #969696; -webkit-box-shadow: 0 6px 8px #969696; }
    .login-bd h2 { text-align: center; font-size: 18px; color: #000; padding-top: 28px; }
</style>
<script>
    $("#login").click(function () {
        if ($("#name").val() == "" || $("#pwd").val() == "") {
            alert("用户名或密码不能为空");
            return;
        }
        else {
            $("#login2").click();
        }
        
    })
</script>

