@{
    ViewBag.Title = "数据列表";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.Menu = 6;
}
@using ProductGroup.Models.EF;
            
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 5px;">
    <legend>历史信息收集列表</legend>
</fieldset>
<div>
    <button class="layui-btn" onclick="importdata()">导入数据</button>
    <button style="float:right;margin-right:10px;" onclick="ClearData();" class="layui-btn layui-btn-warm">清除当前数据</button>
</div>
<div id="ProductTable">

</div>
<div id="Pager"></div>

<script>
   layui.use(['laypage', 'layer'], function () {
        var laypage = layui.laypage
            , layer = layui.layer;

        //完整功能
        laypage.render({
            elem: 'Pager'
            , count: @(ViewBag.TotalCount)
            , limit:10
            , layout: ['count', 'prev', 'page', 'next',  'skip']
            , jump: function (obj) {
                $.ajax({
                    url: "/InfoCollect/HistoryData",
                    type: "Post",
                    dataType: "html",
                    data: { curr: obj.curr},
                    success: function (data) {
                        $('#ProductTable').html(data);
                    }
                })
            }
        });
    });
    function importdata() {
        $(".loading").show();
        $.ajax({
            url: "/Shared/ImportHistory",
            type: "Post",
            dataType: "json",
            data: {},
            success: function (result) {
                if (result.code == 0) {
                    $(".loading").hide();
                    alert("导入成功！");
                    location.href = "/InfoCollect/CollectHistory";
                }
                else {
                    $(".loading").hide();
                    alert(result.msg);
                }
            }
        })
    }
    function ClearData() {
        $(".loading").show();
        $.ajax({
            url: "/InfoCollect/ClearHistory",
            type: "Post",
            dataType: "json",
            data: {},
            success: function (result) {
                if (result.succ) {
                    $(".loading").hide();
                    alert("清空成功！");
                    location.href = "/InfoCollect/CollectHistory";
                }
                else {
                    $(".loading").hide();
                    alert(result.msg);
                }
            }
        })
    }
</script>